<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".WifiScannerActivity">

    <!-- WiFi Scanner Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WiFi Network Scanner"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- Scan Button -->
    <Button
        android:id="@+id/wifiScanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="🔍 Scan WiFi Networks"
        android:layout_marginBottom="8dp" />

    <!-- Status Text -->
    <TextView
        android:id="@+id/wifiStatusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Press scan to find nearby WiFi networks"
        android:textColor="#FF9800"
        android:textSize="14sp"
        android:padding="8dp"
        android:background="#FFF8E1"
        android:layout_marginBottom="16dp" />

    <!-- WiFi Networks List Label -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Available Networks:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- RecyclerView for WiFi list -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/wifiListRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:padding="8dp" />

</LinearLayout>
