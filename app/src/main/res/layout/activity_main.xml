<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- App Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/my_application"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <!-- WiFi Scanner Button -->
    <Button
        android:id="@+id/wifiScannerButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ“¶ WiFi Network Scanner"
        android:layout_marginBottom="16dp" />

    <!-- Step 1 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/step1_description"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/networkScanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scan_network"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/stopScanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stop Scan"
        android:layout_marginBottom="16dp" />

    <!-- Step 2 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/step2_description"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/selectedIpText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No IP selected"
        android:textColor="#666666"
        android:layout_marginBottom="8dp"
        android:background="#F0F0F0"
        android:padding="8dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/portScanButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/scan_ports"
        android:layout_marginBottom="16dp" />

    <!-- Progress Display (NEW) -->
    <TextView
        android:id="@+id/progressText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Progress will appear here"
        android:textColor="#FF9800"
        android:textSize="14sp"
        android:padding="6dp"
        android:background="#FFF8E1"
        android:layout_marginBottom="8dp" />

    <!-- Results Section -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/results_label"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#F5F5F5"
        android:padding="8dp">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/press_scan"
            android:fontFamily="monospace"
            android:linksClickable="true"
            android:textColor="#000000" />
    </ScrollView>

</LinearLayout>
